<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="0.5dp"
    android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@color/colorPrimaryDark" >

    <ImageView
        android:id="@+id/ivBackdrop"
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/backdrop_placeholder"
        tools:scaleType="fitXY" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ivBackdrop"
        android:maxLines="5"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="10dp"
        android:text="Movie Title"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/ivBackdrop" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="201dp"
        android:layout_height="154dp"
        android:layout_below="@+id/tvTitle"
        android:layout_toEndOf="@+id/ivBackdrop"
        android:layout_toRightOf="@+id/ivBackdrop"
        android:ellipsize="end"
        android:maxLines="10"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="12sp" />
</RelativeLayout>